<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Ajouter un film a votre liste : <%= @list.name %></h3>
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.input :comment, placeholder: 'Entrer un commentaire par rapport au film' %>
          <%= f.association :movie, prompt: 'Selectionner un film', input_html: { class: 'select2' } %>
          <%= f.submit class: 'btn btn-warning' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
